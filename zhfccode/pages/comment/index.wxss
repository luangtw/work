/* pages/historyorder/index.wxss */
.head{padding:20rpx 20rpx;border-bottom:2rpx #ddd solid;}
.btn-box{float:right;height:50rpx;line-height:50rpx;}
.btn{background:#fff;border-radius:15rpx;font-size:32rpx;border:2rpx #057f4c solid;padding:0 10rpx;color:#057f4c;}
.head .icon{border-top-color:#057f4c;margin-right:0;top:20rpx;margin-left:10rpx;}

/*列表*/
.list-item{border-bottom:2rpx #ddd solid;padding:35rpx;padding-right:70rpx;overflow:hidden;}
.img{float:left;width:140rpx;height:140rpx;line-height:140rpx;text-align:center;margin-right:.8em;}
.img image{width:100%;height:100%;vertical-align: top;}
.state-box{float:right;margin-right:-25rpx;font-size:32rpx;width:25rpx;padding-top:10rpx;margin-left:25rpx;margin-top:25rpx;}
.scan{width:115rpx;color:#057f4c;border:2rpx #057f4c solid;height:50rpx;line-height:50rpx;border-radius:10rpx;text-align:center;padding:0 10rpx;}
.scan + .price{color:#057f4c;}
.reply{width:115rpx;color:#ef7c1b;border:2rpx #ef7c1b solid;height:50rpx;line-height:50rpx;border-radius:10rpx;text-align:center;padding:0 10rpx;}
.reply + .price{color:#ef7c1b;}
.price{overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;word-wrap:break-word;word-break:break-all;font-size:28rpx;display: block;}

.title{font-weight:400;font-size:40rpx;width:auto;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;word-wrap:break-word;word-break:break-all}
.time,.user,.sort{color:#999;font-size:28rpx;line-height:1.2;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;display:inline;margin-right:10rpx;}
.icon-youjiantou{float:none;margin-right:0;top:0;font-size:0;overflow:hidden;}

/* 留言板 */
.xCommentBox{
  width: 100%;
  margin: 0 auto;
}
.xInformationBox{
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #888;
  margin: 20rpx 0;
}
.xComment{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.xReplyUserLine{
  font-size: 28rpx;
  margin-left: 50rpx;
}
.xReplyUser{
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  color: #888;  
}
.xReply{
  display: inline-block;
}

/* 回复框 */
.xInputBox{
  width: 99%;
  height: 110rpx;
  margin:20rpx auto 0;
}
.xInput{
  width: cale(100%-70rpx);
  height: 90rpx;
  line-height:50rpx;
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  font-size:30rpx;
  padding-right:70rpx;
}
.xIconReply{
  width: 65rpx;
  height: 65rpx;
  position: relative; 
  top: -80rpx; 
  left: 90%;
}
.xButton{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 45rpx; 
  margin: 30rpx auto;
  border-radius: 15rpx; 
  background: rgb(240, 185, 5);
  text-align: center;
}

.xBlock{
  margin-right: 30rpx;
}

/* 帖子浏览信息 */
.xBrowseBox{
  width: 100%;
  margin: 10rpx auto;
}
.xBrowseInformationBox{
  display: inline-block;
  width: 25%;

}

.comment{clear:both;margin-top:45rpx;}
.icon-xiajiantou{top:0;right:-30rpx;}