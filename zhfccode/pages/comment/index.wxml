<!--评论-->
<view class="head">
  <text>历史记录</text>
</view>

<!--评论列表-->
<view class="list-box">
  <block wx:for="{{ListArray}}" wx:for-index="index">
    <view url="" class="list-item">
      <view catchtap="toggleComment" data-index="{{index}}">     
        <view class="img">
          <image src="{{item.picurl}}"/>
        </view>
        <view class="state-box">
          <view class="{{selectedFlag[index]?'icon-xiajiantou':'icon-youjiantou'}}" style=""></view>
        </view>
        <view class="desc">
          <view class="title">{{item.title}}</view>
          <text class="time">{{item.time}}</text>
          <text class="time">{{item.user}}</text>
        </view>
      </view>
      <view class="comment" hidden="{{!selectedFlag[index]}}">
        <!-- 帖子浏览信息 -->
        <view class='xBrowseBox fontMin'>
          <view class='xBrowseInformationBox' wx:for='{{brawse}}'>
            <text class='xBrowseInformation'>{{item.brawse}}</text>
            <text class='xPrice'>{{item.quantity}}</text>
          </view>
        </view>

        <!-- 留言板 -->
          <view class='xBorder'></view>
          <view class='xCommenBox'>
            <view class='xCommentBox border' wx:for='{{msg}}'>
              <view class='xInformationBox'>
                <text class='xUser xBlock'>{{item.user}}</text>
                <text class='xUser xBlock'>{{item.time}}</text>
                <text class='xGood xBlock'>{{item.good}}</text>
                <text class='xReply xBlock'>{{item.reply_b}}</text>
              </view>
              <view class='xComment'>{{item.comment}}</view>
              <view class='xReplyUserLine' wx:if='{{item.reply}}'>
                <text class='xReplyUser'>{{item.replyUser}}</text><view class='xReply'>{{item.reply}}</view>
              </view>    
            </view>
          </view>

          <!-- 回复 -->
          <view class='xInputBox'><input class='xInput' placeholder='请在此处输入你想回复的内容..' bindinput='setValue'></input><image class='xIconReply' src='/images/reply01.png'></image></view>
      </view>
    </view>
  </block>
</view>



<view class="slidemore">展开更多历史记录>></view>