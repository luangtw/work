.girds-box{
  width: calc(100% - 30rpx);
  margin: 30rpx auto;
  
}
.girds-cell{
  display: inline-block;
  width: calc(20% - 20rpx);
  margin: 10rpx;
}
.girds-cell text{
  display: block;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  color: #888;overflow:hidden;
}
.girds-pic image{
  margin: auto;
  display: block;
  width:100rpx;
  height:100rpx;
}





