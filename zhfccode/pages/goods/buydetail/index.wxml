<import src="../../../wxParse/wxParse.wxml"/>
<!--房源细节-->
<!--轮播图-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}" indicator-color="{{beforeColor}}" indicator-active-color="{{afterColor}}">
  <block wx:for="{{swiperPic}}" wx:key="{{item.index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" bindtap="imgYu" data-list="{{swiperPic}}" data-src="{{item}}"/>
    </swiper-item>
  </block>
</swiper>

<!-- 标题 -->
<view class='xTitBox border'>
  <text class='xTit'>{{housedetail.title}}</text>
</view>
<!-- end -->

<!-- 房屋价格，楼层信息 -->
<view class="houseinforbox">
  <view class="cost">
    <text class="house-price">{{housedetail.price}}</text>
    <text class="lh-f12 lh-cg">卢布</text>
  </view>
  <view class="houseinfor">
    <text>{{housedetail.rooms}}室{{housedetail.parlors}}厅</text>
    <text>楼层：{{housedetail.floor}}/{{housedetail.totalFloor}}</text>
  </view>
  <view class="houseinfor">
   <text>单价：8000卢布/平</text>
  </view>
  <view class="houseinfor">
    <text>总面积：{{housedetail.area}}平米</text>
  </view>
  <view class="houseinfor">
    <text>厨房：{{housedetail.area}}平米</text>
  </view>
  <view class="houseinfor">
    <text>房龄：{{housedetail.age}}年</text>
  </view>
  <view class="houseinfor">
    <text>行政区：{{housedetail.region}}</text>
  </view>
  <view class="houseinfor hidden">
    <text>城市：{{housedetail.city}}</text>
  </view>
  <view class="address1">地址：{{housedetail.position}}</view>
  
  <view class="subway">地铁：{{housedetail.subway}}</view>
  
</view>
<view class="border hidden"></view>

