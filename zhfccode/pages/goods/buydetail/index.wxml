<!-- 图片 -->
<view class='xImgBox hidden'>
  <view class="sum hidden">介绍</view>
  <image class='xImg' wx:for='{{images}}' src='{{item}}'></image>
  <view class="address hidden">
    <template is="wxParse" data="{{wxParseData:article.nodes}}" />
  </view>
</view>
<!-- end -->

<!-- 留言板 -->

<view class='sum hidden'>留言板</view>

<view class='xBorder hidden'></view>
<view class='xCommenBox hidden'>
  <view class='xCommentBox border' wx:for='{{msg}}'>
    <view class='xInformationBox'>
      <text class='xUser xBlock'>{{item.user}}</text>
      <text class='xUser xBlock'>{{item.time}}</text>
      <text class='xGood xBlock'>{{item.good}}</text>
      <text class='xReply xBlock'>{{item.reply_b}}</text>
    </view>
    <view class='xComment'>{{item.comment}}</view>
    <view class='xReplyUserLine' wx:if='{{item.reply}}'>
      <text class='xReplyUser'>{{item.replyUser}}</text><view class='xReply'>{{item.reply}}</view>
    </view>    
  </view>
</view>


<!-- 回复  -->
 <view class='xInputBox hidden'><input class='xInput' placeholder='请在此处输入你想回复的内容..' bindinput='setValue'></input><image class='xIconReply' src='/images/reply01.png'></image></view>


 
<!-- 温馨提示 -->
<view class="tip-box">
  <view class="tips">
    <text>温馨提示：</text>
    {{tips}}
  </view>
</view>

