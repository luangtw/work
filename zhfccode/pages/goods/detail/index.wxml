<!-- 信息表 -->
<view class='xFromBox'>
  <view class='xFrom'>
    <view class='xLine' wx:for='{{from}}'>
      <text class='xInformation xLeft'>{{item.att}}</text><text class='xPrice'>{{item.value}}</text>
    </view>
  </view>
</view>
<view class="border"></view>
<!-- end -->

<!-- 图片 -->
<view class='xImgBox'>
  <view class="sum">介绍</view>
  <image class='xImg' wx:for='{{images}}' src='{{item.image}}'></image>
  <text class='xIntroduce'>{{int}}</text>
  
</view>
<!-- end -->

<!-- 留言板 -->

<view class='sum'>留言板</view>

<view class='xBorder'></view>
<view class='xCommenBox'>
  <view class='xCommentBox border' wx:for='{{msg}}'>
    <view class='xInformationBox'>
      <text class='xUser xBlock'>{{item.user}}</text>
      <text class='xUser xBlock'>{{item.time}}</text>
      <text class='xGood xBlock'>{{item.good}}</text>
      <text class='xReply xBlock'>{{item.reply_b}}</text>
    </view>
    <view class='xComment'>{{item.comment}}</view>
    <view class='xReplyUserLine' wx:if='{{item.reply}}'>
      <text class='xReplyUser'>{{item.replyUser}}</text><view class='xReply'>{{item.reply}}</view>
    </view>    
  </view>
</view>


