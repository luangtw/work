<!--pages/research/index.wxml-->
<view class='menuBox'>
  <text class='menu'>请填写</text>
  <icon class='icon-xiajiantou'></icon>
</view>

<!--买房找房要求-->
<view class='hidden'>
  <view class='budgetBox'>
    <text class='budgetTxt'>基本预算</text>
    <button class="budget-btn" bindtap="showDialogBtn">{{price}}</button>
    <text class='budgetPriceTxt'>卢布</text>
  </view>

  <view class='objectiveBox'>
    <text class='objectiveTxt'>买房目的</text>
    <view class='objectiveIndex' wx:for="{{list1}}" wx:key="list1">
      <view class="{{index==idx1?'_objective':'objective'}}" bindtap='objectiveIndex' data-index="{{index}}">{{item.objective}}</view>
    </view>
  </view>

  <view class='demandBox'>
    <text class='demandTxt'>基本需求</text>
    <view class='demandIndex' wx:for="{{list2}}" wx:key="list2">
      <view class="{{index==idx2?'_demand':'demand'}}" bindtap='demandIndex' data-index="{{index}}">{{item.demand}}</view>
    </view>
  </view>

  <view class='rangeBox'>
    <text class='rangeTxt'>区域范围</text>
    <view class='rangeIndex' wx:for="{{list3}}" wx:key="list3">
      <view class="{{index==idx3?'_range':'range'}}" bindtap='rangeIndex' data-index="{{index}}">{{item.range}}</view>
    </view>
  </view>

  <view class='areaBox'>
    <text class='areaTxt'>户型面积</text>
    <text class='area'>{{area}}</text>
  </view>

  <view class='dateBox'>
    <text class='dateTxt'>紧急程度</text>
    <view class='dateIndex' wx:for="{{list}}" wx:key="list">
      <view class="{{index==idx?'_date':'date'}}" bindtap='dateIndex' data-index="{{index}}">{{item.date}}</view>
    </view>
  </view>
</view>


<!--租房找房要求-->
<view class='rent'>
  <view class='demandBox hidden'>
    <text class='demandTxt'>租房人数</text>
    <view class='demandIndex' wx:for="{{list4}}" wx:key="list4">
      <view class="{{index==idx4?'_demand':'demand'}}" bindtap='peopleIndex' data-index="{{index}}">{{item.demand}}</view>
    </view>
  </view>  

  <view class='objectiveBox sex hidden'>
    <text class='objectiveTxt'>性别</text>
    <view class='objectiveIndex' wx:for="{{list5}}" wx:key="list5">
      <view class="{{index==idx5?'_objective':'objective'}}" bindtap='sexIndex' data-index="{{index}}">{{item.objective}}</view>
    </view>
  </view>

  <view class='objectiveBox hidden'>
    <text class='objectiveTxt'>租赁期限</text>
    <view class='objectiveIndex' wx:for="{{list6}}" wx:key="list6">
      <view class="{{index==idx6?'_objective':'objective'}}" bindtap='rentsortIndex' data-index="{{index}}">{{item.objective}}</view>
    </view>
  </view>

  <view class='objectiveBox'>
    <text class='objectiveTxt' style='width:40%'>户型</text>
    <view class='objectiveIndex' wx:for="{{list7}}" wx:key="list7">
      <view class="{{index==idx7?'_objective':'objective'}}" bindtap='roomsIndex' data-index="{{index}}">{{item.objective}}</view>
    </view>
  </view>

  <view class='objectiveBox'>
    <text class='objectiveTxt'>买房目的</text>
    <view class='objectiveIndex' wx:for="{{list1}}" wx:key="list1">
      <view class="{{index==idx1?'_objective':'objective'}}" bindtap='objectiveIndex' data-index="{{index}}">{{item.objective}}</view>
    </view>
  </view>

  <view class='demandBox'>
    <text class='demandTxt'>基本需求</text>
    <view class='demandIndex' wx:for="{{list2}}" wx:key="list2" style='width:15%'>
      <view class="{{index==idx2?'_demand':'demand'}}" bindtap='demandIndex' data-index="{{index}}">{{item.demand}}</view>
    </view>
  </view>

  <view class='rangeBox' style='line-height:70rpx;'>
    <text class='rangeTxt'>区域范围</text>
    <view class='rangeIndex' wx:for="{{list3}}" wx:key="list3">
      <view class="{{index==idx3?'_range':'range'}}" bindtap='rangeIndex' data-index="{{index}}">{{item.range}}</view>
    </view>
  </view>

  <view class='areaBox'>
    <text class='areaTxt'>开始时间</text>
    <view class='area'>
      <picker mode='date' value='{{startProduceDate}}' start='{{startProduceDate}}' field='day' bindchange='datestartChange'>
        <view>{{startProduceDate}}</view>
      </picker>
    </view>
  </view>

  <view class='areaBox'>
    <text class='areaTxt'>结束时间</text>
    <view class='area'>
      <picker mode='date' value='{{ednProduceDate}}' end='{{endProduceDate}}' field='day' bindchange='dateendChange'>
        <view>{{endProduceDate}}</view>
      </picker>
    </view>
  </view>

  <view class='areaBox'>
    <text class='areaTxt'>着急程度</text>
    <view class='area'>
      <picker bindchange="bindUrgentChange" value="{{urgentindex}}" range="{{urgentarray}}">
        <view>{{urgentarray[urgentindex]}}</view>
      </picker>
    </view>
  </view>

  <view class='areaBox'>
    <text class='areaTxt'>生效日期</text>
    <view class='area'>
      <picker bindchange="bindeffectiveChange" value="{{effectiveindex}}" range="{{effectivearray}}">
        <view>{{effectivearray[effectiveindex]}}</view>
      </picker>
    </view>
  </view>


  <view class='areaBox inptxtBox'>
    <text class='areaTxt'>最低预算</text>
    <view class='area'>
      <input type='text' class='inptxt'/>卢布
    </view>
  </view>

  <view class='areaBox inptxtBox'>
    <text class='areaTxt'>最高预算</text>
    <view class='area'>
      <input type='text' class='inptxt'/>卢布
    </view>
  </view>
  
  
  
<!-- 温馨提示 -->
<view class="tip-box">
  <view class="tips">
    <text>温馨提示：</text>
    {{tips}}
  </view>
</view>



</view>






<navigator class='buttonBox'  url="../goods/look/index">
  提交
</navigator>

<!--弹窗-->
<view class="budget-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="budget-dialog" wx:if="{{showModal}}">
  <view class="budget-title">基本预算</view>
  <view class="budget-content">
    <view class="budget-input">
      <input placeholder-class="input-holder" type="number" maxlength="10" bindinput="inputChange" class="input" placeholder="金额"></input>
    </view>
  </view>
  <view class="budget-footer">
    <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
    <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view>
  </view> 
</view>

