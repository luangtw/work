/* pages/historyorder/index.wxss */
.head{padding:20rpx 20rpx;border-bottom:2rpx #ddd solid;}
.btn-box{float:right;height:50rpx;line-height:50rpx;}
.btn{background:#fff;border-radius:15rpx;font-size:32rpx;border:2rpx #057f4c solid;padding:0 10rpx;color:#057f4c;}
.head .icon{border-top-color:#057f4c;margin-right:0;top:20rpx;margin-left:10rpx;}

/*列表*/
.list-item{border-bottom:2rpx #ddd solid;padding:35rpx;padding-right:185rpx;overflow:hidden;}
.img{float:left;width:140rpx;height:140rpx;line-height:140rpx;text-align:center;margin-right:.8em;}
.img image{width:100%;height:100%;vertical-align: top;}
.state-box{float:right;margin-right:-150rpx;font-size:32rpx;width:140rpx;padding-top:30rpx;}
.scan{width:115rpx;color:#057f4c;border:2rpx #057f4c solid;height:50rpx;line-height:50rpx;border-radius:10rpx;text-align:center;padding:0 10rpx;}
.scan + .price{color:#057f4c;}
.reply{width:115rpx;color:#ef7c1b;border:2rpx #ef7c1b solid;height:50rpx;line-height:50rpx;border-radius:10rpx;text-align:center;padding:0 10rpx;}
.reply + .price{color:#ef7c1b;}
.gray{width:115rpx;color:#aaa;border:2rpx #aaa solid;height:50rpx;line-height:50rpx;border-radius:10rpx;text-align:center;padding:0 10rpx;}
.gray + .price{color:#aaa;}
.price{overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;word-wrap:break-word;word-break:break-all;font-size:28rpx;display: block;text-align:center;}

.title{font-weight:400;font-size:40rpx;padding-top: 15rpx;width:auto;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;word-wrap:break-word;word-break:break-all}
.time,.user,.sort{color:#999;font-size:28rpx;line-height:1.6;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2}

/*顶部导航*/
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;font-size:32rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #ef7c1b;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #ef7c1b;
}
.hide{display:none;}




