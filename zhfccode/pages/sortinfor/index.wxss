/* pages/assortment/assortment.wxss */
/* 搜索框 */
.xTopSearchBox{
  width: 100%;
  height: 70rpx;
  padding: 20rpx 0;
  background: #ddd;
}
.xTopSearchBox .xBoxSearch{
  width: 90%;
  height: 100%;
  margin: 0 auto;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
}
.xTopSearchBox .xBoxSearch .xSearchIcon{
  width: 80rpx;
  height: 100%;
  float: left;
}
.xTopSearchBox .xBoxSearch .xSearchIcon image{
  width: 100%;
  height: 100%;
}
.xTopSearchBox .xBoxSearch .xInput{
  float: left;
  width: calc(100% - 80rpx);
  height: 100%;
  line-height: 70rpx;
}
.xTopSearchBox .xBoxSearch .xInput input{
  height: 70rpx;
  font-size: 32rpx;
}

/* 筛选菜单部分 */
.xTwoBox{
  width: 100%;  
}
.xSreenBox{
  width: 90%;
  margin: 0 auto;
}
.xMenuBox{
  display: inline-block;
  width: 25%;
  height: 80rpx;  
  line-height: 80rpx; 
  text-align: center;
  color: #666;   
}
.xTrangle{
  float: right;
  width: 0;
  height: 0; 
  border-top: 20rpx solid #888;
  border-right: 10rpx solid transparent;
  border-bottom: none;
  border-left: 10rpx solid transparent;
  margin-right: 20rpx;
  position: relative;
  top: 5rpx;
}

/* 分隔 */
.xBlock{
  width: 100%;
  height: 70rpx;
  background: rgb(235, 230, 230);
  font-size: 36rpx;
  color: #EF8200;
  margin: 20rpx auto;
  line-height: 70rpx;
  text-align:center;
}
.xBlock .xTxt{
  margin-right: 40rpx;
  display: inline-block;
}

/* 信息列表 */
.xBox{
  width: 90%;
  margin: 0rpx auto;
}
.xBox .xListOption{
  width: calc(50% - 10rpx);
  display: inline-block;
}
.xBox .xListOption:nth-child(2n){
  float: right;
}
.xBox .xListOption .xImgBox{
  width: 100%;
  height: 250rpx;
}
.xBox .xListOption .xImgBox image{
  width: 100%;
  height: 100%;
}

.xBox .xListOption .xTextBox{
  width: 100%;
  height: 210rpx;
  font-size: 28rpx;
  color: #666;
}
.xBox .xListOption .xTextBox .xPriceBox{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;  
}
.xBox .xListOption .xTextBox .xPriceBox .xPrice{
  width: 100%;
  height: calc(100% / 3);  
  font-size: 36rpx;
  color: #00913A;
}
.xBox .xListOption .xTextBox .xPriceBox .xPrice .xTit{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
}
.xBox .xListOption .xTextBox .xAddBox{
  width: 100%; 
  height: 70rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-top: 20rpx; 
  display: -webkit-box; 
   -webkit-line-clamp: 2;  
   overflow: hidden;  
   -webkit-box-orient: vertical; 
     text-overflow: ellipsis;

}
.xAddBox text{
  display: block;
  height: 35rpx;
  line-height: 35rpx;
}

.xTipsSlider{
  width: 90%;
  text-align: center;
  font-size: 36rpx;
  margin: 20rpx 0;
  color: #888;
}
.xBox .xSeeAll{
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  background: #ddd;
  border-radius: 20rpx;
  color: #EF8200;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}


