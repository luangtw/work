/* pages/user/user.wxss */
.xBackgroundBar{
  width: 100%;
  height: 180rpx;
  background: #EF8200;
}
.xUserBox{
 width: 90%;
 height: 160%;
 border-bottom: 1rpx solid #333;
 margin: 0 auto;
}
.xUser{
  width: 90%;
  height: 200rpx;
  border-radius: 50rpx;
  background: #eee;
  margin: 0 auto;
  position: relative;
  top: 30rpx;
  box-shadow: 3rpx 5rpx 3rpx #ccc;
  border: 1rpx solid #ccc;
}
/* 头像 */
.xUserLogo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 20rpx 40rpx;
  float: left;
  background: #fff; 
  overflow: hidden;
  position: relative;
  box-shadow: 0rpx 0rpx 25rpx #fff;
}
.xUserLogo:after{ 
  position: absolute;
  width: 100%;
  height: 100%;
  content: '';
  top: 0;
  left: 0;
  border-radius:50%;
  box-shadow: 0 0 5rpx 5rpx #fff inset; 
}
.xUserLogo image{
  width: 100%;
  height: 100%;
}

/* 用户信息 */
.xUserInformationBox{
  width: calc(100% - 240rpx);
  height: 100%;
  display:inline-block;
  font-size: 35rpx;
  color: #aaa;
}
.xUserNameBox{
   height: 100rpx;
   line-height: 100rpx;
}
.xUserName{
  font-size: 40rpx;  
  color: #EF8200;
  float: left;
}
.xEditor{
  width: 35rpx;
  height: 42rpx;
  margin: 30rpx 0 0 15rpx;
  float: left;vertical-align: middle;
}
.xId{
  float: right;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}
.xUserContact{
  height: 35rpx;
  line-height: 35rpx;
  font-size: 24rpx;
  display: block;
}


/* 个人信息 */
.xPersonInformationBox{
  width: 100%;
}

.xPersonInformation{ 
  width: 90%;
  margin: 0 auto;
  margin-top:100rpx; 
  font-size: 25rpx;
}
.xInformationBoxNone{
  display: none;
}
.xInformationBoxBlock{
  display: block;
}
.xHeader{
  height: 85rpx;
  line-height: 85rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.xBorder{
  height: 85rpx;
  line-height: 85rpx;
  font-size: 36rpx;
  /* font-weight: bold; */
  border-bottom: 1rpx solid #aaa;
}
.xInformation{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #aaa;padding:0 20rpx;color:#999;
}
.xName{
  margin-left: 15rpx;
}
.xZhi{
  float: right;
  margin-right: 15rpx;
}
/* information end */

.xView{
  height: 800rpx;
}
.xInformation .icon-youjiantou{right:-15rpx}
.icon-youjiantou,.icon-xiajiantou{top:25rpx;}
.xBox{padding-top:10rpx;}
.xTit{font-size:36rpx;font-weight:bold;}